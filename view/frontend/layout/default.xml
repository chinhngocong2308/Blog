<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    
        <referenceBlock name="header.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="aht.link" after="register-link" ifconfig="ahtblog/general/enable" cacheable="false">
                <arguments>
                    <argument name="label" xsi:type="string" translate="false">Blog</argument>
                    <argument name="path" xsi:type="string" translate="false">ahtblog/post/index</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
